{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2016",

    /* Modules */
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
